@page
@model WEB_Sergeev.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Админка";
}

@*<h1>Index</h1>*@

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle">Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <td></td>
            <th>
                @Html.DisplayNameFor(model => model.Engine[0].EngineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Engine[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Engine[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Engine[0].ClassId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Engine[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Engine) {
        <tr>
            <td>
                <img src="~/images/@item.Image" alt="NoImage" width="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EngineId"
                   class="btn btn-outline-info">
                    <span class="fas fa-edit"></span></a> 
                
                <a asp-page="./Delete" asp-route-id="@item.EngineId"
                   class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
