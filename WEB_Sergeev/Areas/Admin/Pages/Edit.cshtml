@page "{id:int}"
@model WEB_Sergeev.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Engine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Engine.EngineId" />
            <div class="form-group">
                <label asp-for="Engine.EngineName" class="control-label"></label>
                <input asp-for="Engine.EngineName" class="form-control" />
                <span asp-validation-for="Engine.EngineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Engine.Description" class="control-label"></label>
                <input asp-for="Engine.Description" class="form-control" />
                <span asp-validation-for="Engine.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Engine.Price" class="control-label"></label>
                <input asp-for="Engine.Price" class="form-control" />
                <span asp-validation-for="Engine.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Engine.ClassId" class="control-label"></label>
                <input asp-for="Engine.ClassId" class="form-control" />
                <span asp-validation-for="Engine.ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Engine.Image))
                {
                    <img src="~/images/@Model.Engine.Image." alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Engine.Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/bs-custom-file-input.js"></script>
    <script>
        bsCustomFileInput.init();
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
